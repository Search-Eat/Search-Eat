<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Granate_logo"
    tools:context=".Vista.RegisterActivity">

  <ImageView
      android:id="@+id/Logo_Register"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_marginTop="60dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo_searcheat" />

  <EditText
      android:id="@+id/editTextNombre_Register"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      android:backgroundTint="@color/Amarillo_logo"
      android:ems="10"
      android:hint="@string/text_view_nombre"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Logo_Register" />

  <EditText
      android:id="@+id/editTextPassword_Register"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      android:backgroundTint="@color/Amarillo_logo"
      android:ems="10"
      android:hint="@string/text_view_password"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextNombre_Register" />

  <EditText
      android:id="@+id/editTextEmail_Register"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      android:backgroundTint="@color/Amarillo_logo"
      android:ems="10"
      android:hint="@string/text_view_email"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextPassword_Register" />

  <EditText
      android:id="@+id/editTextNumTel_Register"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      android:backgroundTint="@color/Amarillo_logo"
      android:ems="10"
      android:hint="@string/text_view_num_tel"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextEmail_Register" />

  <Button
      android:id="@+id/button_SignUp_Register"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/button_rounded"
      android:text="@string/button_signup"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextNumTel_Register" />

</androidx.constraintlayout.widget.ConstraintLayout>